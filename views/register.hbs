            <input type="number" placeholder="Enter your number" name = "Phone" required id="number">
          </div>
          <div class="input-box">
            <span class="details">Gender*</span>
            <select name="Gender" id="gender" required>
              <option value="none" disabled selected="selected">--Select Your Gender--</option>
