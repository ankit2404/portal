            <input type="date"  placeholder="Date of birth" required id="dob" name = "dob" >
          </div>
          <div class="input-box">
            <span class="details">Emergency Contact Name*</span>
            <input type="text" placeholder="Enter Name" name = "emergencyContactName" required id="number">
          </div>
          <div class="input-box">
            <span class="details">Emergency Contact Number*</span>
            <input type="number" placeholder="Enter number" name = "emergencyContactNumber" required id="number">
          </div>
          <div class="input-box">
            <span class="details">Marital Status*</span>
