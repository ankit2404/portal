     <title>Edit Details</title>
   </head>
<body>
  <div class="container">
    <div class="title">Edit Information</div>
    <div class="content">
      <form action="/user/edit" method="POST">
        <div class="user-details">
          <div class="input-box">
            <span class="details">First Name</span>
            <input type="text" placeholder="Enter your first name" name = "Fname" value="{{user.Fname}}" id="f-name">
          </div>
          <div class="input-box">
            <span class="details">Last Name</span>
            <input type="text" placeholder="Enter your last name"  name = "Lname" id="l-name" value="{{user.Lname}}">
          </div>
          <div class="input-box">
            <span class="details">Role</span>
            <select name="role" id="gender">
              <option value="user">User</option>
              <option value="admin">Admin</option>
            </select>
          </div>
          <div class="input-box">
            <span class="details">Phone Number</span>
            <input type="number" placeholder="Enter your number" name = "Phone" value="{{user.Phone}}" id="number">
          </div>


          <div class="input-box">
            <span class="details">Home Address</span>
            <input type="text" placeholder="Enter Your Address" name = "Address" id="number" value="{{user.Address}}">
          </div>
          <div class="input-box">
            <span class="details">Employee State Insurance(ESI)</span>
            <input type="text" placeholder="Employee State Insurance" name = "esi" id="number" value="{{user.esi}}">
          </div>

             <div class="input-box">
            <span class="details">Employee Id</span>
        <input type="text" placeholder="Enter Your Employee Id" name = "EmployeId" value = "{{user.EmployeId}}"id="number" >
          </div>
          <div class="input-box">
            <span class="details" id="dob-title">Date of Joining</span>
            <input type="text" placeholder="Joining Date(DD-MM-YYYY)"  id="dob" value="{{user.joiningDate}}" name = "joiningDate">
          </div>
              <div class="input-box">
            <span class="details">Department</span>
            <select name = "Department" id="gender" value="{{user.Department}}">
              <option value="none" disabled selected="selected">--Select Department--</option>
              <option value="Accounts & Finance">Accounts & Finance</option>
              <option value="Consulting">Consulting</option>
              <option value="Development">Development</option>
              <option value="G-Suite">G-Suite</option>
              <option value="Helpdesk">Helpdesk</option>
              <option value="Implementation">Implementation</option>
              <option value="Marketing">Marketing</option>
              <option value="Sales">Sales</option>
            </select>
          </div>
          <div class="input-box">
            <span class="details">Designation</span>
            <input type="text" placeholder="Enter Your Designation" name = "Designation" value="{{user.Designation}}" id="number" >
          </div>
          <div class="input-box">
            <span class="details">Provident Fund</span>
            <input type="text" placeholder="Provident Fund" name = "pv" value="{{user.pv}}" id="number" >
          </div>
          <div class="input-box">
            <span class="details">Universal Account Number(UAN)</span>
            <input type="text" placeholder="Universal Account Number" name = "uan" value="{{user.uan}}" id="number" >
          </div>
         
        </div>

        <div class="button">
        <input type="submit" value="Save Changes" id="btn" >
        </div>
      </form>
    </div>
  </div>
</body>

</html>
