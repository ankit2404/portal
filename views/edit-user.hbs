@media(max-width : 1200px) {
  body {
    height : 100vh;
  }
  .content form .user-details{
    max-height: 700px;
    overflow-y: scroll;
  }
}
 @media(max-width: 584px){
  body {
    height : 100vh;
  }
 .container{
  max-width: 100%;
}
form .user-details .input-box{
    margin-bottom: 15px;
    width: 100%;
  }
  form .category{
    width: 100%;
  }
  .content form .user-details{
    max-height: 300px;
    overflow-y: scroll;
  }
  .user-details::-webkit-scrollbar{
    width: 5px;
  }
  }
  @media(max-width: 459px){
  .container .content .category{
    flex-direction: column;
  }
}

