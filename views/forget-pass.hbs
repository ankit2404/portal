	<body  style="background : linear-gradient(135deg, #71b7e6, #9b59b6); height : 100vh">
	<section class="ftco-section">
		<div class="container">
		
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-4">
					<div class="login-wrap p-0">
		      	<h3 class="mb-4 text-center">Enter your Email Address</h3>
		      	<form method = "POST" action="/sendotp" class="signin-form">
		      		<div class="form-group">
		      			<input type="email" class="form-control" placeholder="Email Address" name="forgetEmail" required>
		      		</div>
	        
	            <div class="form-group">
	            	<button type="submit" class="form-control btn btn-primary submit px-3">Send Otp</button>
	            </div>
	      
	          </form>
	         
		      </div>
				</div>
			</div>
		</div>
	</section>

